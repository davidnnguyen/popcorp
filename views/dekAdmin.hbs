<h1>DEK Admin</h1>
<form method="post" action="/dek-admin">
  {{#if dekExists}}
    <button type="submit" class="btn btn-primary" disabled>Generate DEK</button>
    <button type="submit" class="btn btn-danger" id="deleteDek" name="action" value="delete">Delete DEK</button>
  {{else}}
    <button type="submit" class="btn btn-primary">Generate DEK</button>
    <button type="submit" class="btn btn-danger" id="deleteDek" name="action" value="delete" disabled>Delete DEK</button>
  {{/if}}
</form>
<div style="margin-top:25px;">
{{#if errorMsg}}
  <p><alert class="alert alert-warning" role="alert">{{errorMsg}}</alert> </p>
{{/if}}
{{#if dek}}
  <p><alert class="alert alert-success" role="alert">{{successMsg}}</alert> </p>
  <p>{{dek}}</p>
{{/if}}
</div>
